{
  "extends": "../tsconfig.base.json",

  "compilerOptions": {
    "useDefineForClassFields": true,
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@frontend/*": ["./src/*"],
      "@core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "../core" }]
}
