{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,

    // Extra rules
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  }
}
